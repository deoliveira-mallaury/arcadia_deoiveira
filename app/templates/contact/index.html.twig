{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<style></style>

	<h5 class="text-center my-3">Contact</h5>
	<form class="contact-form border border-dark rounded m-3">
		<div class="contact-form-container container">
			<div class="m-2 text-center">
				<label for="exampleInputEmail1" class="form-label ">Adresse mail</label>
				<input type="email" class="form-control w-80 mx-auto" id="inputcontactEmail1" aria-describedby="emailHelp">
			</div>
			<div class="m-2 text-center">
				<label for="exampleInputEmail1" class="form-label ">Titre</label>
				<input type="text" class="form-control w-80 mx-auto" id="titleInputContact" aria-describedby="emailHelp">
			</div>
			<div class="m-2 text-center">
				<label class="text-center mb-2" for="textareaContact">Description</label>
				<textarea class="form-control w-80 mx-auto" placeholder="Leave a comment here" id="textareaContact" style="height: 40vh"></textarea>
			</div>
			<div class="d-grid gap-2 m-2 col-3 mx-auto">
				<button type="submit" class="btn btn-primary text-center">Submit</button>
			</div>
		</div>
	</form>
{% endblock %}
